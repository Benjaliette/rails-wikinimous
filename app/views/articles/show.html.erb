<h2><%= @article.title %></h2>
<p><%= @article.content %></p>

<div class="btn btn-primary update-btn"><%= link_to "Update the article", edit_article_path(@article) %></div>
<div class="btn btn-danger delete-btn"><%= link_to "Delete the article", article_path(@article), method: :delete, data: { confirm: "This is going to defenetively delete the article, are you sure?" } %></div>
